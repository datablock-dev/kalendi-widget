{
    "compilerOptions": {
      "target": "ES5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "module": "NodeNext",
      "jsx": "preserve",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./"
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}