{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "NodeNext",
    "declaration": true,
    "declarationDir": "./",
    "sourceMap": true,
    "outDir": "./",
    "moduleResolution": "NodeNext",
    //"emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "rootDir": "./"
  },
  "include": ["index.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
  ]
}